<h2>All Users</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Admin</th>
		</tr>
	</thead>
  <% @user.each_with_index do |user, i| %>
    <tbody>
  	  <td><%= (i+1) %></td>
    	<td><%= link_to user.first_name, user_path(user) %></td>
    	<td><%= user.last_name %></td>
    	<td><%= user.email %></td>
    	<td><%= user.admin? %></td>
  <% end %>
  </tbody>
</table>
<p><%= link_to "Back", admin_dashboard_path %></p>