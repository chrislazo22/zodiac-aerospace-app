<div class="sign-in">
	<%= link_to (image_tag 'logo.jpg'), root_path %>

	<div class="row">
		<div class="col s12">
		  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="row">
	      <div class="input-field col s12">
					<%= f.email_field :email, id: "email", class: "validate", type: "email"%>
					<label for="email">Email</label>
				</div>
			</div>

			<div class="row">
	      <div class="input-field col s12">
					<%= f.password_field :password, id: "password", class: "validate", type: "password"  %>
					<label for="password">Password</label>
				</div>
			</div>

	    <div class="actions center-align">
				<button class="btn #2196f3 blue waves-effect waves-light" type="submit" name="action">Login</button>
	    </div>

		  <% end %>

		  <%= render "devise/shared/links" %>
		</div>
	</div>
</div>
