<%= form_for @specimen do |f| %>
  <table class="table">
    <thead>
      <tr>
        <th>General Information</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :pass_or_fail %></td>
        <td><%= f.text_field :pass_or_fail %></td>
      </tr>
      <tr>
        <td><%= f.label :test_plan, "Test Plan" %></td>
        <td><%= f.text_field :test_plan %></td>
      </tr>
      <tr>
        <td><%= f.label :cushion %></td>
        <td><%= f.text_field :cushion %></td>
      </tr>
      <tr>
        <td><%= f.label :test_plan_id %></td>
        <td><%= f.text_field :test_plan_id %></td>
      </tr>
      <tr>
        <td><%= f.label :seat_model %></td>
        <td><%= f.text_field :seat_model %></td>
      </tr>
      <tr>
        <td><%= f.label :test_date %></td>
        <td><%= f.date_select :test_date %></td>
      </tr>
    </tbody>
  </table>
  
  <table class="table">
    <thead>
      <tr>
        <th>Burn Length</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :vert_burn_length_front %></td>
        <td><%= f.text_field :vert_burn_length_front %></td>
      </tr>
      <tr>
        <td><%= f.label :vert_burn_length_back %></td>
        <td><%= f.text_field :vert_burn_length_back %></td>
      </tr>
      <tr>
        <td><%= f.label :horiz_burn_length_top %></td>
        <td><%= f.text_field :horiz_burn_length_top %></td>
      </tr>
      <tr>
        <td><%= f.label :horiz_burn_length_bottom %></td>
        <td><%= f.text_field :horiz_burn_length_bottom %></td>
      </tr>
      <tr>
        <td><%= f.label :weight_loss_lbs %></td>
        <td><%= f.text_field :weight_loss_lbs %></td>
      </tr>
      <tr>
        <td><%= f.label :weight_loss_percent %></td>
        <td><%= f.text_field :weight_loss_percent %></td>
      </tr>
    </tbody>
  </table>
  
  <table class="table">
    <thead>
      <tr>
        <th>Foam</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Foam A</td>
        <td><%= f.text_field :vert_burn_length_front %></td>
      </tr>
      <tr>
        <td>Foam B</td>
        <td><%= f.text_field :foam_b_material %></td>
      </tr>
    </tbody>
  </table>
  
  
  <div>
    <%= f.label :foam_a_material %>
    <%= f.text_field :foam_a_material %>
    <%= f.label :foam_a_percent %>
    <%= f.number_field :foam_a_percent %>
  </div>
  <div>
    <%= f.label :foam_b_material %>
    <%= f.text_field :foam_b_material %>
    <%= f.label :foam_b_percent %>
    <%= f.number_field :foam_b_percent %>
  </div>
  <div>
    <%= f.label :foam_c_material %>
    <%= f.text_field :foam_c_material %>
    <%= f.label :foam_c_percent %>
    <%= f.number_field :foam_c_percent %>
  </div>
  <div>
    <%= f.label :decorative_insulation_part_number %>
    <%= f.text_field :decorative_insulation_part_number %>
  </div>
  <div>
    <%= f.label :decorative_insulation_mfr %>
    <%= f.text_field :decorative_insulation_mfr %>
  </div>
  <div>
    <%= f.label :backing %>
    <%= f.text_field :backing %>
  </div>
  <div>
    <%= f.label :adhesive_one %>
    <%= f.text_field :adhesive_one %>
  </div>
  <div>
    <%= f.label :adhesive_two %>
    <%= f.text_field :adhesive_two %>
  </div>
  <div>
    <%= f.label :fireblock_type %>
    <%= f.text_field :fireblock_type %>
  </div>
  <div>
    <%= f.label :fireblock_part_number %>
    <%= f.text_field :fireblock_part_number %>
  </div>
  <div>
    <%= f.label :fireblock_color %>
    <%= f.text_field :fireblock_color %>
  </div>
  <div>
    <%= f.label :fireblock_mfr %>
    <%= f.text_field :fireblock_mfr %>
  </div>
  <div>
    <%= f.label :flame_treatment %>
    <%= f.text_field :flame_treatment %>
  </div>
  <div>
    <%= f.label :fireblock_percent %>
    <%= f.text_field :fireblock_percent %>
  </div>
  <div>
    <%= f.label :thermoplastic_part_number %>
    <%= f.text_field :thermoplastic_part_number %>
  </div>
  <div>
    <%= f.label :thermoplastic_mfr %>
    <%= f.text_field :thermoplastic_mfr %>
  </div>
  
  <%= f.label :cover_config %>
    <%= f.text_field :cover_config %>
  </div>
  
  <%= f.submit "Submit" %>
<% end %>